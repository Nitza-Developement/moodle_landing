---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  status: string;
  active?: boolean;
}

const { title, description, status, active = true } = Astro.props;
---

<div class:list={[
  "flex items-center gap-4 bg-white p-5 rounded-xl mb-4 shadow-[0_4px_12px_rgba(0,0,0,0.05)] border border-border last:mb-0",
  "dark:bg-dark-bg-secondary dark:border-dark-border",
  !active && "opacity-60 border-dashed"
]}>
  <div class:list={[
    "w-12 h-12 rounded-[10px] flex items-center justify-center text-white",
    active ? "bg-primary" : "bg-text-light dark:bg-dark-text-light"
  ]}>
    <Icon name={active ? "lucide:server" : "lucide:plus"} class="w-6 h-6" />
  </div>
  
  <div class="flex-1">
    <h4 class="font-body text-[15px] font-semibold mb-1 dark:text-dark-text-primary">{title}</h4>
    <p class="text-[13px] m-0">{description}</p>
  </div>
  
  <span class:list={[
    "flex items-center gap-1.5 text-[13px] font-medium",
    active ? "text-emerald-500" : "text-text-light dark:text-dark-text-light"
  ]}>
    {active && (
      <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse-slow"></span>
    )}
    {status}
  </span>
</div>
