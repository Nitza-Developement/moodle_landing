---
import type { HeaderItem, InnerItem } from '../types/headers';

interface Props {
  item: HeaderItem;
  isLanguageSelector?: boolean;
  customStyle?: string;
  isUserList?: boolean;
  currentLang?: string;
  currentLangName?: string;
}

const { item, isLanguageSelector = false, customStyle = '', isUserList = false, currentLang = 'en', currentLangName = 'English' } = Astro.props;

const flags: Record<string, string> = {
  en: "data:image/jpeg;base64,",
  es: "data:image/jpeg;base64,",
};

const iconPaths: Record<string, string> = {
  Ad: "M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2M12 11a4 4 0 1 0 0-8 4 4 0 0 0 0 8",
  Ca: "M1 2h2l1.5 9.5A2.5 2.5 0 0 0 7 14h10.5a2.5 2.5 0 0 0 2.45-2L22 6H6",
  WL: "M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z",
  LO: "M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4M16 17l5-5-5-5M21 12H9",
};

const uniqueId = `dropdown-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="relative flex-col z-20 flex" data-dropdown={uniqueId}>
  <!-- Trigger element -->
  <div class="inline-flex items-center text-sm lg:text-base font-medium text-slate-700 rounded-full hover:text-primary">
    <div data-trigger>
      {isLanguageSelector ? (
        <a
          class="flex after:absolute hover:after:-bottom-10 after:inset-0 relative items-center text-base"
          href="#"
        >
          <img alt="flag" class="h-3.5 me-3" src={flags[currentLang]} />
          <span class="font-medium text-xs text-white">
            {currentLangName}
          </span>
        </a>
      ) : isUserList ? (
        <a
          class="relative flex items-center text-base text-slate-600 hover:text-primary dark:text-slate-400"
          href="#"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-user w-5 h-5"
          >
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
      ) : (
        <button class="group w-full px-4 justify-between flex items-center hover:bg-slate-100 rounded-md">
          <span class="xl:py-1 group-hover:text-primary cursor-pointer dark:text-slate-300">
            {item?.name}
          </span>
          <svg
            data-chevron
            class="size-5 transition-transform duration-300 text-gray-500 inline-block ml-2 group-hover:text-primary"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
      )}
    </div>
  </div>

  <!-- Dropdown panel -->
  <div
    data-panel
    class:list={[
      "xl:absolute top-full whitespace-nowrap z-10 rounded-md bg-white shadow-lg ring-1 ring-gray-900/5 dark:bg-slate-950",
      "opacity-0 translate-y-1 pointer-events-none transition-all duration-200",
      customStyle
    ]}
  >
    <div>
      {item?.innerItems?.map((innerItem: InnerItem) => (
        isLanguageSelector && innerItem.lang ? (
          <span
            data-lang={innerItem.lang}
            class="cursor-pointer flex items-center gap-2 font-normal text-slate-600 hover:text-slate-700 hover:bg-slate-100 py-2 px-3 rounded dark:text-slate-400 dark:hover:bg-slate-900 dark:hover:text-slate-300"
          >
            <img alt="flag" class="h-4" src={flags[innerItem.lang]} />
            {innerItem.name}
          </span>
        ) : isUserList && innerItem.code ? (
          <a
            class="flex items-center gap-3 m-1 font-normal text-slate-600 py-2 px-3 hover:text-slate-700 hover:bg-slate-100 rounded cursor-pointer dark:text-slate-400 dark:hover:bg-slate-900 dark:hover:text-slate-300"
            href="javascript:void(0)"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="size-5 text-gray-600"
            >
              <path d={iconPaths[innerItem.code]} />
            </svg>
            {innerItem.name}
          </a>
        ) : (
          <a
            href={innerItem.href}
            class="flex items-center font-normal text-slate-600 py-2 px-3 transition-all hover:text-slate-950 hover:bg-slate-100 rounded dark:text-slate-400 dark:hover:bg-slate-900 dark:hover:text-slate-300"
          >
            {innerItem.name}
          </a>
        )
      ))}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dropdowns = document.querySelectorAll('[data-dropdown]');

    dropdowns.forEach((dropdown) => {
      const trigger = dropdown.querySelector('[data-trigger]');
      const panel = dropdown.querySelector('[data-panel]') as HTMLElement;
      const chevron = dropdown.querySelector('[data-chevron]');
      const langItems = dropdown.querySelectorAll('[data-lang]');
      
      let isOpen = false;
      let isXl = window.innerWidth >= 1280;

      const updateScreenSize = () => {
        isXl = window.innerWidth >= 1280;
      };

      const openPanel = () => {
        if (!isOpen) {
          isOpen = true;
          panel.classList.remove('opacity-0', 'translate-y-1', 'pointer-events-none');
          panel.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
          chevron?.classList.add('rotate-180');
        }
      };

      const closePanel = () => {
        if (isOpen) {
          isOpen = false;
          panel.classList.add('opacity-0', 'translate-y-1', 'pointer-events-none');
          panel.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
          chevron?.classList.remove('rotate-180');
        }
      };

      const togglePanel = () => {
        if (isOpen) {
          closePanel();
        } else {
          openPanel();
        }
      };

      // Click handler
      trigger?.addEventListener('click', (e) => {
        e.preventDefault();
        togglePanel();
      });

      // Hover handlers for xl screens
      dropdown.addEventListener('mouseenter', () => {
        if (isXl) openPanel();
      });

      dropdown.addEventListener('mouseleave', () => {
        if (isXl) closePanel();
      });

      // Language change handlers
      langItems.forEach((langItem) => {
        langItem.addEventListener('click', () => {
          const lang = langItem.getAttribute('data-lang');
          if (lang) {
            localStorage.setItem('locale', lang);
            window.location.reload();
          }
        });
      });

      // Resize listener
      window.addEventListener('resize', updateScreenSize);

      // Close on click outside
      document.addEventListener('click', (e) => {
        if (!dropdown.contains(e.target as Node)) {
          closePanel();
        }
      });
    });
  });
</script>