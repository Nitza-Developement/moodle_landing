---
import FAQItem from './ui/FAQItem.astro';

interface FAQItemData {
  question: string;
  answer: string;
}

interface Props {
  label: string;
  title: string;
  subtitle: string;
  items: FAQItemData[];
}

const { label, title, subtitle, items } = Astro.props;
---

<section id="faq" class="py-24">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-[600px] mx-auto mb-16">
      <span class="section-label">{label}</span>
      <h2 class="mb-4 text-[clamp(2rem,4vw,2.75rem)] dark:text-dark-text-primary">{title}</h2>
      <p class="text-text-muted dark:text-dark-text-muted">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-[900px] mx-auto">
      {items.map((item) => (
        <FAQItem 
          question={item.question} 
          answer={item.answer} 
        />
      ))}
    </div>
  </div>
</section>
