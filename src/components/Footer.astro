---
import { Icon } from 'astro-icon/components';

interface LinkData {
  name: string;
  href: string;
}

interface ColumnData {
  title: string;
  links: LinkData[];
}

interface Props {
  brand: {
    description: string;
    email: string;
  };
  columns: ColumnData[];
  legal: {
    copyright: string;
    links: LinkData[];
  };
}

const { brand, columns, legal } = Astro.props;
---

<footer class="bg-text-dark text-white/70 py-16 pb-8">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand -->
      <div class="md:col-span-2 lg:col-span-1">
        <a href="/" class="flex items-center gap-2.5 font-display font-bold text-2xl text-white mb-4">
          <div class="w-9 h-9 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center text-white">
            <Icon name="lucide:graduation-cap" class="w-5 h-5" />
          </div>
          <span>Metis<span class="text-primary">Host</span></span>
        </a>
        <p class="text-sm text-white/50 mb-5">{brand.description}</p>
        <a 
          href={`mailto:${brand.email}`} 
          class="flex items-center gap-2 text-sm text-white/70 hover:text-primary transition-colors"
        >
          <Icon name="lucide:mail" class="w-4 h-4" />
          {brand.email}
        </a>
      </div>

      <!-- Columns -->
      {columns.map((column) => (
        <div>
          <h4 class="font-body text-sm font-semibold text-white mb-5">{column.title}</h4>
          <div class="flex flex-col gap-3">
            {column.links.map((link) => (
              <a 
                href={link.href} 
                class="text-sm text-white/50 hover:text-primary transition-colors"
              >
                {link.name}
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-[13px] text-white/40">{legal.copyright}</p>
      <div class="flex gap-6">
        {legal.links.map((link) => (
          <a 
            href={link.href} 
            class="text-[13px] text-white/40 hover:text-primary transition-colors"
          >
            {link.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
