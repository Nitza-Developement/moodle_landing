---
interface Props {
  img: string;
  name: string;
  text?: string;
  stars: number;
  signal?: string;
  text2?: string;
}

const { img, name, text, stars, signal, text2 } = Astro.props;
---

<div class="flex items-center rounded-full p-4 bg-slate-200 dark:bg-gray-800 m-4 w-fit shadow-lg dark:shadow-slate-400 dark:shadow-md">
  <img src={img} alt="Review Image" class="rounded-full w-16 h-16 mr-2" />
  <div class="flex flex-col">
    <p class="font-[cursive] text-xl dark:text-white">{name}</p>
    <p class="text-sm text-slate-850 dark:text-gray-300">{text}</p>
    <div class="flex">
      {Array.from({ length: 5 }, (_, i) => i + 1).map((star) =>
        star <= stars ? (
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-4 w-4 text-yellow-500">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
          </svg>
        ) : (
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 w-4 text-yellow-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
          </svg>
        )
      )}
    </div>
    <p class="text-slate-950 dark:text-gray-300 ml-2 font-bold">
      <span class="text-orange-500">{signal}</span> {text2}
    </p>
  </div>
</div>