---
import PricingCard from './ui/PricingCard.astro';

interface PlanData {
  name: string;
  price: string;
  period: string;
  description: string;
  features: string[];
  capacity: string;
  cta: string;
  ctaHref?: string;
  featured?: boolean;
  featuredLabel?: string;
}

interface Props {
  label: string;
  title: string;
  subtitle: string;
  note: string;
  plans: PlanData[];
}

const { label, title, subtitle, note, plans } = Astro.props;
---

<section id="pricing" class="py-24 bg-bg-light dark:bg-dark-bg-secondary">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-[600px] mx-auto mb-16">
      <span class="section-label">{label}</span>
      <h2 class="mb-4 text-[clamp(2rem,4vw,2.75rem)] dark:text-dark-text-primary">{title}</h2>
      <p class="text-text-muted dark:text-dark-text-muted">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 items-start">
      {plans.map((plan) => (
        <PricingCard {...plan} />
      ))}
    </div>

    <!-- Note -->
    <p class="text-center mt-8 text-sm text-text-light dark:text-dark-text-light">
      {note}
    </p>
  </div>
</section>
