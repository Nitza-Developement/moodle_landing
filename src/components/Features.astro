---
import FeatureCard from './ui/FeatureCard.astro';

interface FeatureCardData {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  label: string;
  title: string;
  subtitle: string;
  cards: FeatureCardData[];
}

const { label, title, subtitle, cards } = Astro.props;
---

<section id="features" class="py-24">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-[600px] mx-auto mb-16">
      <span class="section-label">{label}</span>
      <h2 class="mb-4 text-[clamp(2rem,4vw,2.75rem)] dark:text-dark-text-primary">{title}</h2>
      <p class="text-text-muted dark:text-dark-text-muted">{subtitle}</p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {cards.map((card) => (
        <FeatureCard 
          icon={card.icon} 
          title={card.title} 
          description={card.description} 
        />
      ))}
    </div>
  </div>
</section>
